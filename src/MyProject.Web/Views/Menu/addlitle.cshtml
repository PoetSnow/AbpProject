
@{
    Layout = null;
}

<!DOCTYPE html>
@model MyProject.Mic_Type.Dto.typeListDto
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>addlitle</title>
    <link href="~/css/Login/c.css" rel="stylesheet" />
    <link href="~/css/Login/manage.css" rel="stylesheet" />
    <script src="~/js/jquery-1.7.1.min.js"></script>
    <script src="~/js/zDialog.js"></script>
    <script src="~/js/zDrag.js"></script>
</head>
<body>
    <table width="98%" cellspacing="0" cellpadding="0" border="0" class="blockTable">
        <tr>
            <td width="65%" style="padding: 6px 10px;" class="blockTd">
                <div class="mframe">
                    <table width="95%" cellspacing="0" cellpadding="0" style="border-bottom: #ddd 1px solid;">
                        <tr>
                            <td class="mm">
                                <table id="color_code" runat="server" style="width: 100%; padding-bottom: 5px;">
                                    <tr align="right">
                                        <td align="left">
                                            当前位置： 新建子级
                                        </td>
                                        <td align="right"></td>
                                    </tr>
                                </table>
                                <div style="padding-bottom: 5px; text-align: center;">
                                    <input type="button" value="保存" class="btn_gray"  id="btnSave1"/>
                                    <input type="button" onclick="Dialog.close();" value="关闭" class="btn_gray" />
                                </div>
                                <table class="server" cellpadding="0" cellspacing="1" style="width: 100%;">
                                    <tr style="height: 30px;">
                                        <td style="width: 100px; text-align: right;">
                                            直属父级：
                                        </td>
                                        <td>
                                          @Model.type_name
                                        </td>
                                    </tr>
                                    <tr style="height: 30px;">
                                        <td style="width: 100px; text-align: right;">
                                            栏目名称：
                                        </td>
                                        <td>
                                            <input type="text" class="inputtext" style="width:80%" id="type_name" />
                                            <span class="explain">必填项</span>
                                        </td>
                                    </tr>
                                    <tr style="height: 30px;">
                                        <td style="width: 100px; text-align: right;">
                                            排序：
                                        </td>
                                        <td>
                                            <input type="text" style="width:80%" class="inputtext" id="order_id" />
                                            <span class="explain">必填项，填写大于0的正整数</span>
                                        </td>
                                    </tr>
                                    <tr style="height: 30px;">
                                        <td style="width: 100px; text-align: right;">
                                            打开类型：
                                        </td>
                                        <td>
                                            <input type="radio" name="target" value="1" checked="checked" />当前窗口
                                            <input type="radio" name="target" value="2" />新窗口
                                         
                                        </td>
                                    </tr>
                                    <tr style="height: 30px;">
                                        <td style="width: 100px; text-align: right;">
                                            链接地址：
                                        </td>
                                        <td>
                                            <input type="text" class="inputtext" style="width:80%" />
                                        </td>
                                    </tr>
                                    <tr style="height: 30px;">
                                        <td style="width: 100px; text-align: right;">
                                            预览地址：
                                        </td>
                                        <td>
                                            <input type="text" class="inputtext" style="width:80%" />                                          
                                            <span class="explain">点击标题时的预览地址</span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td colspan="2">
                                            <div style="padding: 5px; text-align: center;">
                                                <input type="button" value="保存" class="btn_gray" id="btnSave2"/>
                                                <input type="button" onclick="Dialog.close();" value="关闭" class="btn_gray" />
                                            </div>
                                        </td>
                                    </tr>
                                </table>
                            </td>
                        </tr>
                    </table>
                </div>
            </td>
        </tr>
    </table>
    <script src="~/js/menu/menuAddlitle.js"></script>

    <script type="text/javascript">
        menuAddlitle.init(@Model.Id);
    </script>
</body>
</html>
