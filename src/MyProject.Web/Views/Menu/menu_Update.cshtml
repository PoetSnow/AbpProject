                    return false;
                }
                if (order_id == "" ) {
                    Dialog.alert("排序不能为空！");
                    return false;
                }
                else {
                     var reg = /^[1-9]*[0-9][0-9]*$/;
                    if (!reg.test(order_id)) {
                        Dialog.alert("排序应为正整数！");
                        return false;
                    }
                }
                if (description=="") {
                    Dialog.alert("链接地址不能为空！");
                    return false;
                }   
            })
        })*@
    </script>
</body>
</html>
